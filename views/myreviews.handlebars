<div class="row">
    <div class="col-12">
        <div class="card top-card text-center text-white mt-2" style="width: 28rem;">
            <img class="card-img-top" src="/assets/images/hands.jpg" alt="Crowd">
            <div class="card-body">
                <p class="card-text">Review music. Share with your freinds.</p>
                <button id="writeReview" type="button" class="btn btn-outline-light btn-lg">Write A Review!</button>
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-12">
        <div class="text-white reviewbox">
            <div class="card-body feed-card">
                <div class="row">
                    <div class="col-12">
                        <h4 class="card-title">My Reviews</h4>
                    </div>
                </div>
                <div class="row">
                    {{#each reviews}}
                    <div class="reviews col-5">

                        <h3>Reviewing: {{review_name}}</h3>
                        <h5>Rating: {{rating}}/5</h5>
                        <p>{{review_text}}</p>

                    </div>
                    {{/each}}
                </div>
            </div>

        </div>
    </div>
</div>

<script src="/assets/js/writeReview.js"></script>
